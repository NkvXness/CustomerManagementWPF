<UserControl x:Class="CustomerManagement.WPF.Views.VipBonusControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="350">

    <Border BorderBrush="#FFD700" BorderThickness="2" Padding="15" CornerRadius="5" Background="#FFFEF5E7">
        <StackPanel>
            <!-- Заголовок -->
            <TextBlock Text="⭐ VIP Бонусная программа" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       Foreground="#DAA520"
                       Margin="0,0,0,15"/>

            <!-- Текущие баллы -->
            <Border Background="White" 
                    Padding="10" 
                    CornerRadius="3"
                    Margin="0,0,0,15">
                <Grid>
                    <TextBlock Text="Накоплено баллов:" 
                               FontWeight="SemiBold" 
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="BonusPointsText" 
                               Text="0" 
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#DAA520"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Персональный менеджер -->
            <Border Background="White" 
                    Padding="10" 
                    CornerRadius="3"
                    Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="👤 Персональный менеджер:" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,5"/>
                    <TextBlock x:Name="PersonalManagerText" 
                               Text="Не назначен" 
                               FontSize="14"
                               Foreground="Gray"/>
                </StackPanel>
            </Border>

            <!-- Информация -->
            <TextBlock TextWrapping="Wrap" 
                       FontSize="11" 
                       Foreground="Gray">
                <Run Text="💡 За каждую покупку начисляются бонусные баллы."/>
                <LineBreak/>
                <Run Text=" 1 балл = 1 рубль при следующих покупках."/>
            </TextBlock>

            <!-- Кнопки управления -->
            <StackPanel Orientation="Vertical" 
                        Margin="0,15,0,0">
                <Button x:Name="UsePointsButton"
                        Height="40"
                        Margin="0,0,0,10"
                        Click="UsePointsButton_Click">
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <TextBlock Text="💳" 
                                   FontSize="16"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,5"/>
                        <TextBlock Text="Использовать баллы" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button x:Name="AssignManagerButton"
                        Height="40"
                        Click="AssignManagerButton_Click">
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <TextBlock Text="👤" 
                                   FontSize="16"
                                   VerticalAlignment="Center"
                                   Margin="0,0,4,4"/>
                        <TextBlock Text="Назначить менеджера" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>

        </StackPanel>
    </Border>
</UserControl>