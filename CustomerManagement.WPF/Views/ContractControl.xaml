<UserControl x:Class="CustomerManagement.WPF.Views.ContractControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="350">

    <Border BorderBrush="LightGray" BorderThickness="1" Padding="10" CornerRadius="5">
        <StackPanel>
            <TextBlock Text="Управление договором" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       Margin="0,0,0,15"/>

            <!-- Информация о договоре -->
            <StackPanel x:Name="ContractInfoPanel" Margin="0,0,0,10">
                <TextBlock Text="Номер договора:" FontWeight="SemiBold" Margin="0,0,0,3"/>
                <TextBlock x:Name="ContractNumberText" Text="Не указан" Margin="0,0,0,10"/>

                <TextBlock Text="Дата подписания:" FontWeight="SemiBold" Margin="0,0,0,3"/>
                <TextBlock x:Name="ContractDateText" Text="—" Margin="0,0,0,10"/>

                <TextBlock Text="Статус:" FontWeight="SemiBold" Margin="0,0,0,3"/>
                <TextBlock x:Name="ContractStatusText" Text="Не оформлен" FontWeight="Bold"/>
            </StackPanel>

            <!-- Кнопки действий -->
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button x:Name="SignContractButton" 
                        Content="📝 Подписать"
                        Width="110"
                        Height="30"
                        Margin="0,0,5,0"
                        Click="SignContractButton_Click"/>

                <Button x:Name="TerminateContractButton"
                        Content="✗ Расторгнуть"
                        Width="110"
                        Height="30"
                        Margin="0,0,5,0"
                        Click="TerminateContractButton_Click"/>

                <Button x:Name="RenewContractButton"
                        Content="🔄 Возобновить"
                        Width="110"
                        Height="30"
                        Click="RenewContractButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>